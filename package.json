{
  "name": "ng-virtual-table",
  "version": "1.0.43",
  "description": "Angular 7 virtual scroll table with support dynamic component, draggable, filtering, server side, sorting, pagination, resizable and custom config column",
  "main": "index.js",
  "repository": "git@github.com:PxyUp/ng-virtual-table.git",
  "author": "Iurii Panarin <tduble94@tduble.com>",
  "license": "MIT",
  "scripts": {
    "build": "ng-packagr -p package.json",
    "ct": "git-cz",
    "pretest": "yarn cleancoverage",
    "test": "jest",
    "test:ci": "jest --runInBand --coverage",
    "test:report": "cd coverage && codecov",
    "cleancoverage": "rimraf coverage",
    "format:code": "prettier --write \"lib/src/**/*.{ts,js,?css,json}\"",
    "format:html": "prettyhtml \"lib/src/**/*.html\"",
    "format": "npm-run-all -p format:code format:html"
  },
  "ngPackage": {
    "lib": {
      "entryFile": "./lib/public_api.ts"
    },
    "cssUrl": "inline",
    "whitelistedNonPeerDependencies": [
      "angular",
      "rxjs",
      "ng-dynamic-component"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn test",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "lib/src/**/*.{ts,js,?css,json}": [
      "prettier --write",
      "git add"
    ],
    "lib/src/**/*.{ts,js}": [
      "tslint -p tsconfig.json -c tslint.json --fix",
      "git add"
    ],
    "lib/src/**/*.html": [
      "prettyhtml",
      "git add"
    ]
  },
  "devDependencies": {
    "@angular/animations": "^7.0.0",
    "@angular/cdk": "^7.0.0",
    "@angular/cli": "^7.0.0",
    "@angular/common": "^7.0.0",
    "@angular/compiler": "^7.0.0",
    "@angular/compiler-cli": "^7.0.0",
    "@angular/core": "^7.0.0",
    "@angular/forms": "^7.0.0",
    "@angular/material": "^7.0.0",
    "@angular/platform-browser": "^7.0.0",
    "@angular/platform-browser-dynamic": "^7.0.1",
    "@commitlint/config-conventional": "^7.1.2",
    "@starptech/prettyhtml": "^0.5.1",
    "@types/jest": "^23.3.7",
    "codecov": "^3.1.0",
    "codelyzer": "^4.5.0",
    "commitizen": "^3.0.4",
    "commitlint": "^7.2.1",
    "husky": "^1.1.2",
    "jest": "^23.6.0",
    "jest-preset-angular": "^6.0.1",
    "lint-staged": "^8.0.4",
    "ng-packagr": "^4.3.1",
    "npm-run-all": "^4.1.3",
    "prettier": "^1.14.3",
    "rimraf": "^2.6.2",
    "rxjs": "^6.3.3",
    "rxjs-tslint-rules": "^4.10.0",
    "scss-bundle": "^2.4.0",
    "ts-jest": "^23.10.4",
    "tsickle": "^0.33.0",
    "tslint": "^5.11.0",
    "typescript": "3.1.3",
    "zone.js": "~0.8.26"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "header-max-length": [
        2,
        "always",
        80
      ]
    }
  },
  "keywords": [
    "virtual scroll",
    "scroll",
    "ngx",
    "angular",
    "angular 7",
    "ngx",
    "dynamic",
    "component",
    "input",
    "output",
    "life-cycle"
  ],
  "peerDependencies": {
    "@angular/animations": "^7.0.0",
    "@angular/cdk": "^7.0.0",
    "@angular/core": "^7.0.0",
    "@angular/forms": "^7.0.0",
    "@angular/material": "^7.0.0"
  },
  "dependencies": {
    "ng-dynamic-component": "^4.0.0"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfig": "<rootDir>/tsconfig.spec.json"
      },
      "__TRANSFORM_HTML__": true
    },
    "coverageDirectory": "<rootDir>/coverage",
    "collectCoverageFrom": [
      "lib/src/**/*.ts",
      "!lib/src/ngVirtualTable.module.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    },
    "transform": {
      "^.+\\.(ts|html)$": "jest-preset-angular/preprocessor.js"
    },
    "transformIgnorePatterns": [
      "node_modules/(?!@ngrx)"
    ],
    "preset": "jest-preset-angular",
    "setupTestFrameworkScriptFile": "<rootDir>/setupJest.ts",
    "testPathIgnorePatterns": [
      "/dist/",
      "/node_modules/",
      "/appTest/",
      "/docs"
    ]
  }
}
